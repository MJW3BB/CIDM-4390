@page
@model RazorPagesUI.AddAddressModel
@{
    ViewData["Title"] = "Add Address";
}

<h1 class="display-4">Request a Project</h1>
<p class="lead">Go ahead and fill out the information below and we will have someone reach out as soon as possible.</p>
<p class="lead">Help is on the way!</p>

<form method="post">
    <div class="form-group">
    <input type="firstname" class="form-control" asp-for="Address.FirstName" placeholder="First Name">
  </div>
  <div class="form-group">
    <input type="lastname" class="form-control" asp-for="Address.LastName" placeholder="Last Name">
  </div>
  <div class="form-group">
    <input type="businessname" class="form-control" asp-for="Address.BusinessName" placeholder="Business Name">
  </div>
  <div class="form-group">
    <input type="" class="form-control" asp-for="Address.BusinessRole" placeholder="Position">
  </div>
  <div class="form-group">
    <input type="" class="form-control" asp-for="Address.EmailAddress" placeholder="Email">
  </div>
  <div class="form-group">
    <input type="" class="form-control" asp-for="Address.OfficeNumber" placeholder="Office Phone">
  </div>
  <div class="form-group">
    <input type="" class="form-control" asp-for="Address.CellNumber" placeholder="Mobile Number">
  </div>
  <div class="form-group">
    <input type="streetaddress" class="form-control" asp-for="Address.StreetAddress" placeholder="Street Address">
  </div>
  <div class="form-group">
    <input type="city" class="form-control" asp-for="Address.City" placeholder="City">
  </div>
  <div class="form-group">
    <input type="state" class="form-control" asp-for="Address.State" placeholder="State">
  </div>
  <div class="form-group">
    <input type="zip" class="form-control" asp-for="Address.ZipCode" placeholder="Zip">
  </div>
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1"> 
    <label class="form-check-label" for="exampleCheck1">I agree to the terms and conditions of submitting a request.</label>
  </div>
<p class="lead">We take your privacy seriously and will never share it with any third parties.</p>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
